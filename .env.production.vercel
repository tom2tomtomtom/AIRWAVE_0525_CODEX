# Vercel Production Environment Variables
# Copy these to your Vercel dashboard under Settings > Environment Variables

NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-vercel-url.vercel.app
NEXT_PUBLIC_DEMO_MODE=false

# Supabase Configuration (Required)
# ⚠️  SECURITY WARNING: These credentials have been exposed and need to be rotated
# Set these in your deployment platform's environment variables instead
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Security (Generate a 32+ character secret)
JWT_SECRET=your-secure-jwt-secret-min-32-chars-replace-this-in-vercel-dashboard

# AI Services (Add your real keys in Vercel dashboard)
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-key-here
CREATOMATE_API_KEY=your-creatomate-key-here

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_VIDEO_GENERATION=true
ENABLE_SOCIAL_PUBLISHING=true