{
  "name": "airwave",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type:strict": "tsc --noEmit --strict",
    "lint:unused": "eslint . --fix --rule 'no-unused-vars: off, @typescript-eslint/no-unused-vars: off, unused-imports/no-unused-imports: error, unused-imports/no-unused-vars: error'",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test && npm run validate:env",
    "validate:env": "node scripts/validate-env.js",
    "validate:env:production": "node scripts/validate-env.js .env.production",
    "validate:production": "npm run validate:env:production && npm run build",
    "seed": "node scripts/seed-data.js",
    "db:reset": "npm run seed",
    "cleanup": "node scripts/cleanup.js",
    "cleanup:repo": "rm -f fix_*.js temp.txt test.php tsconfig.tsbuildinfo && rm -f src/pages/strategic-content-fixed.tsx src/pages/matrix.tsx.new",
    "prepare": "husky install || true",
    "postinstall": "npm run cleanup:repo || true",
    "prebuild": "npm run validate:env || true",
    "monitor:setup": "node scripts/monitoring-setup.js",
    "monitor:uptime": "node scripts/uptime-monitor.js",
    "monitor:performance": "node -e \"const { performanceMonitor } = require('./src/lib/monitoring/performance'); performanceMonitor.logSummary();\"",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "perf:test": "node scripts/performance-testing.js",
    "perf:lighthouse": "node scripts/performance-testing.js --skip-load-test --skip-bundle",
    "perf:load-test": "node scripts/performance-testing.js --skip-lighthouse --skip-bundle",
    "perf:bundle": "node scripts/performance-testing.js --skip-lighthouse --skip-load-test",
    "backup:full": "bash scripts/backup-recovery.sh full_backup",
    "backup:database": "bash scripts/backup-recovery.sh backup_database",
    "backup:files": "bash scripts/backup-recovery.sh backup_files",
    "backup:config": "bash scripts/backup-recovery.sh backup_config",
    "backup:list": "bash scripts/backup-recovery.sh list_backups",
    "backup:cleanup": "bash scripts/backup-recovery.sh cleanup_old_backups",
    "backup:health": "bash scripts/backup-recovery.sh health_check",
    "backup:schedule": "bash scripts/backup-recovery.sh schedule_backups",
    "smoke:test": "node scripts/smoke-tests.js",
    "smoke:test:prod": "node scripts/smoke-tests.js --url $PRODUCTION_URL",
    "deploy:verify": "npm run smoke:test:prod && npm run health:check:prod",
    "health:check:prod": "curl -f $PRODUCTION_URL/api/health || exit 1",
    "production:checklist": "echo 'ðŸš€ Running production readiness checklist...' && npm run validate:production && npm run perf:test && npm run backup:health && npm run smoke:test",
    "docker:build": "docker build -t airwave:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production airwave:latest",
    "docker:test": "npm run docker:build && npm run docker:run"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/material": "^5.17.1",
    "@mui/x-date-pickers": "^5.0.20",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.49.4",
    "@tanstack/react-query": "^5.76.2",
    "@tanstack/react-query-devtools": "^5.76.2",
    "@types/express": "^4.17.21",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "date-fns": "^2.30.0",
    "dotenv": "^16.5.0",
    "formidable": "^3.5.4",
    "formik": "^2.4.5",
    "framer-motion": "^10.16.5",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.9.0",
    "next": "^14.1.0",
    "openai": "^4.100.0",
    "pdf.js-extract": "^0.2.1",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-query": "^3.39.3",
    "recharts": "^2.12.2",
    "uuid": "^11.1.0",
    "yup": "^1.3.2",
    "zod": "^3.22.4",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.1.0",
    "@sentry/nextjs": "^7.118.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/formidable": "^3.4.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.37",
    "@types/react-color": "^3.0.10",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.4",
    "artillery": "^2.0.15",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^8.0.3",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.7.1",
    "lint-staged": "^15.2.0",
    "node-cron": "^3.0.3",
    "prettier": "^3.5.3",
    "typescript": "^5.2.2",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
