{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "jest.config.js",
    "tests/setup.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "public",
    "coverage",
    "dist",
    "build",
    "tests/e2e/**/*",
    "**/*.e2e.ts",
    "**/*.e2e.spec.ts"
  ]
}
