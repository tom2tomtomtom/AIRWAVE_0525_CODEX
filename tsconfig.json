{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // âœ… ENABLED! Fixed all TypeScript errors
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*", "./*"]
    },
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false, // TODO: Re-enable after systematic cleanup
    "noUnusedParameters": false, // TODO: Re-enable after systematic cleanup
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false, // TODO: Re-enable after systematic cleanup
    "exactOptionalPropertyTypes": false, // TODO: Re-enable after systematic cleanup
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "public",
    "coverage",
    "dist",
    "build",
    "tests/**/*",
    "scripts/**/*",
    "playwright.config.ts",
    "playwright.config.*.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
