# Development Environment Variables
# Copy this file to .env.local and update with your actual values

# Application
NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# Authentication
JWT_SECRET=development-secret-key-min-32-characters-long
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://placeholder.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=placeholder-anon-key
SUPABASE_URL=https://placeholder.supabase.co
SUPABASE_SERVICE_KEY=placeholder-service-key

# AI Services
OPENAI_API_KEY=sk-placeholder-openai-key
ELEVENLABS_API_KEY=placeholder-elevenlabs-key
RUNWAY_API_KEY=placeholder-runwayml-key

# Creatomate (for video rendering)
CREATOMATE_API_KEY=placeholder-creatomate-key

# Storage
STORAGE_BUCKET=airwave-assets
MAX_FILE_SIZE=52428800

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=placeholder@gmail.com
SMTP_PASS=placeholder-password
