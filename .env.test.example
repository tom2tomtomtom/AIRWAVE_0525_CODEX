# Test Environment Configuration
# Copy this file to .env.test.local and fill in your test-specific values

# Test User Credentials (create a dedicated test user)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=secure-test-password-123

# Test API Keys (use test/sandbox keys, never production)
TEST_CREATOMATE_API_KEY=your-test-creatomate-api-key
TEST_CREATOMATE_TEMPLATE_ID=test-template-id

# Test Database (use separate test database)
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/airwave_test

# Test Supabase (use test project)
TEST_SUPABASE_URL=https://your-test-project.supabase.co
TEST_SUPABASE_ANON_KEY=your-test-anon-key
TEST_SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key

# Disable external services in tests
MOCK_EXTERNAL_APIS=true
DISABLE_EMAIL_SENDING=true
DISABLE_SMS_SENDING=true