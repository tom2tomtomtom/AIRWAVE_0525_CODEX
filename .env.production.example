# Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# Application
NEXT_PUBLIC_API_URL=https://your-production-domain.com
NODE_ENV=production

# Authentication - IMPORTANT: Use strong secrets in production!
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Supabase Production
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_SERVICE_KEY=your-production-service-key

# AI Services Production Keys
OPENAI_API_KEY=sk-your-production-openai-key
ELEVENLABS_API_KEY=your-production-elevenlabs-key

# Creatomate Production
CREATOMATE_API_KEY=your-production-creatomate-key

# Storage
STORAGE_BUCKET=airwave-production-assets
MAX_FILE_SIZE=52428800

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-production-email@yourdomain.com
SMTP_PASS=your-production-email-password

# Security Headers
ALLOWED_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Database Connection Pool
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=your-sentry-dsn-url
PERFORMANCE_MONITORING=true

# CDN & Assets
CDN_URL=https://cdn.your-domain.com
ASSET_OPTIMIZATION=true

# Feature Flags
ENABLE_AI_GENERATION=true
ENABLE_VIDEO_RENDERING=true
ENABLE_ANALYTICS=true
