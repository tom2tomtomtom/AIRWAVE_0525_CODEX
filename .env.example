# AIrWAVE Environment Configuration
# Copy this file to .env.local and fill in your values

# Application Mode
# Set to 'true' to run in demo mode (no external services required)
NEXT_PUBLIC_DEMO_MODE=false

# Supabase Configuration (Required in production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security (Required in production)
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-at-least-32-characters
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# AI Services (Optional - features will be disabled if not set)
OPENAI_API_KEY=sk-your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
CREATOMATE_API_KEY=your-creatomate-api-key

# Email Configuration (Optional - email features will be disabled if not set)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@airwave.app

# Storage Configuration
STORAGE_BUCKET=airwave-assets
MAX_FILE_SIZE=52428800

# Security Configuration
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_SOCIAL_PUBLISHING=false
ENABLE_VIDEO_GENERATION=false
ENABLE_AI_FEATURES=false

# Environment
NODE_ENV=development
