# Application
NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# Demo Mode - Set to true to use demo data without external services
NEXT_PUBLIC_DEMO_MODE=false

# Authentication
JWT_SECRET=your-jwt-secret-here-min-32-chars
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Supabase (Optional if using demo mode)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key

# AI Services (Optional if using demo mode)
OPENAI_API_KEY=sk-your-openai-key
ELEVENLABS_API_KEY=your-elevenlabs-key
RUNWAY_API_KEY=your-runwayml-key

# Creatomate (for video rendering)
CREATOMATE_API_KEY=your-creatomate-key

# Storage
STORAGE_BUCKET=airwave-assets
MAX_FILE_SIZE=52428800

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
